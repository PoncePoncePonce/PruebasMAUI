<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PruebasMAUI.MainPage"
             BackgroundColor="White"
             Title="Login">

    <VerticalStackLayout VerticalOptions="Center" BackgroundColor="White">
        <Image Source="ps.png" VerticalOptions="Start" WidthRequest="300"/>
        <Label Text="Usuario" TextColor="RoyalBlue"/>
        <Entry x:Name="entry_user" Placeholder="Ejemplo@techsoft.com.mx" BackgroundColor="WhiteSmoke" TextColor="Black"/>
        <Label Text="Contraseña" TextColor="RoyalBlue"/>
        <Entry x:Name="entry_password" BackgroundColor="WhiteSmoke" TextColor="Black"/>
        <Button x:Name="btn_login" BackgroundColor="RoyalBlue" BorderColor="Black" Text="Iniciar Sesion" TextColor="White" Clicked="btn_login_Clicked"/>

    </VerticalStackLayout>

</ContentPage>
